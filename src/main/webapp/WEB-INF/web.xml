<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>



            <servlet>
                <servlet-name>LoginServlet</servlet-name>
                <servlet-class>com.vibhuti.lms.LoginServlet</servlet-class>
            </servlet>
            <servlet>
                    <servlet-name>AddUser</servlet-name>
                    <servlet-class>com.vibhuti.lms.AddUser</servlet-class>
                </servlet>
            <servlet>
                    <servlet-name>Profile</servlet-name>
                    <servlet-class>com.vibhuti.lms.Profile</servlet-class>
                </servlet>
            <servlet>
                    <servlet-name>Update</servlet-name>
                    <servlet-class>com.vibhuti.lms.Update.UpdatePageMaker</servlet-class>
            </servlet>
            <servlet>
                    <servlet-name>Delete</servlet-name>
                    <servlet-class>com.vibhuti.lms.Delete.DeletePageMaker</servlet-class>
            </servlet>

            <servlet>
                <servlet-name>UpdateValuesServlet</servlet-name>
                <servlet-class>com.vibhuti.lms.Update.UpdateValuesServlet</servlet-class>
            </servlet>


            <servlet>
                <servlet-name>DeleteValuesServlet</servlet-name>
                <servlet-class>com.vibhuti.lms.DeleteValuesServlet</servlet-class>
            </servlet>

    //////////////////////////////////////////////////////////////////////////////////////
    //////////////////////////////////////////////////////////////////////////////////////

            <servlet-mapping>
                <servlet-name>LoginServlet</servlet-name>
                <url-pattern>/login</url-pattern>
            </servlet-mapping>


            <servlet-mapping>
                <servlet-name>AddUser</servlet-name>
                <url-pattern>/addUser</url-pattern>
            </servlet-mapping>

            <servlet-mapping>
                <servlet-name>Profile</servlet-name>
                <url-pattern>/profile</url-pattern>
            </servlet-mapping>

             <servlet-mapping>
                <servlet-name>Update</servlet-name>
                <url-pattern>/update</url-pattern>
            </servlet-mapping>

            <servlet-mapping>
                <servlet-name>Delete</servlet-name>
                <url-pattern>/delete</url-pattern>
            </servlet-mapping>

            <servlet-mapping>
                <servlet-name>UpdateValuesServlet</servlet-name>
                <url-pattern>/updateValues</url-pattern>
            </servlet-mapping>

            <servlet-mapping>
            <servlet-name>DeleteValuesServlet</servlet-name>
                <url-pattern>/deleteValues</url-pattern>
            </servlet-mapping>



            <welcome-file-list>
                <welcome-file>index.jsp</welcome-file>
            </welcome-file-list>



    
</web-app>
